<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/postView"
            android:layout_width="match_parent"
            android:text="@string/post_View"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"/>
    </LinearLayout>

<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/titleLabelPost"
            android:fontFamily="sans-serif"
            android:layout_marginTop="14dp"
            android:textSize="17dp"
            android:layout_marginLeft="14dp"
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/titleInputPost"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/roomLabelPost"
            android:textSize="17dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:text="@string/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/roomInputPost"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addressLabelPost"
            android:fontFamily="sans-serif"
            android:textSize="17dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:text="@string/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/addressInputPost"
            android:layout_marginTop="14dp"

            android:layout_marginRight="14dp"
            android:fontFamily="sans-serif"
            android:inputType="textPostalAddress"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zipLabelPost"
            android:fontFamily="sans-serif"
            android:textSize="17dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:text="@string/zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/zipInputPost"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/priceLabelPost"
            android:fontFamily="sans-serif"
            android:textSize="17dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:text="@string/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/priceInputPost"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width= "match_parent"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/imageViewPost"
            android:layout_width="fill_parent"
            android:textSize="17dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"></ImageView>
        <Button
            android:id="@+id/buttonLoadPicturePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/loadImage"
            android:layout_gravity="center"></Button>
    </LinearLayout>
    </LinearLayout>
