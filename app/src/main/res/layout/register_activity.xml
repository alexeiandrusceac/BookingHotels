<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bookinghotels.app.mainActivity.UserActions.RegisterActivity">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:context=".mainActivity.UserActions.RegisterActivity">
            <ImageView
                android:id="@+id/userImage"
                android:layout_width="100dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img"
                android:src="@drawable/ic_profile"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/user_name" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/user_name"
                android:inputType="text"
                android:maxLines="1" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_prename_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/user_prename" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_prename_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/user_prename"
                android:inputType="text"
                android:maxLines="1" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_email_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="@string/email" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_pass_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="@string/password" />

            <android.support.design.widget.TextInputEditText

                android:id="@+id/user_pass_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_confpass_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:text="@string/conf_password" />

            <android.support.design.widget.TextInputEditText

                android:id="@+id/user_confpass_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/conf_password"
                android:inputType="textPassword" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/register_button"
                android:background="@color/colorAccent"
                android:textColor="@color/searchBar"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="@string/register_button" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>