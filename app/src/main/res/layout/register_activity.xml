<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="@string/user_name"
        android:inputType="text" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/user_name_text"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="@string/user_name" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_prename_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="@string/user_prename"
        android:inputType="text" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/user_prename_text"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="@string/user_prename" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/user_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password" />

    <android.support.design.widget.TextInputEditText

        android:id="@+id/user_pass_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:layout_marginTop="14dp"
        android:inputType="textPassword"
        android:text="@string/password" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_confpass_layout"
        android:layout_width="match_parent"
        android:hint="@string/conf_password"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="@string/conf_password" />

    <android.support.design.widget.TextInputEditText

        android:id="@+id/user_confpass_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:text="@string/conf_password" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/register_button" />
</LinearLayout>
</android.support.v4.widget.NestedScrollView>